{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "classic",
    "checkJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    // "experimentalDecorators": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "disableSizeLimit": true,
    // "forceConsistentCasingInFileNames": true,
    //"paths": {}
    "pretty": true,
    "rootDir": ".",
    "declaration": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "include": [
    "./**/*.js",
    "./**/*.ts"
  ],
  "exclude": ["node_modules"]
}
